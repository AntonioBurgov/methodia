package methodia;

import java.util.*;

public class WordCounter {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.print("Enter sentence: ");
        String text = sc.nextLine().toLowerCase();
        
        // Remove punctuation and keep letters (including international) and spaces
        text = text.replaceAll("[^a-zа-яё\\s]", " ");
        
        // Split by any whitespace and filter out empty strings
        String[] words = Arrays.stream(text.split("\\s+"))
                              .filter(word -> !word.isEmpty())
                              .toArray(String[]::new);
        
        // Count word occurrences
        Map<String, Integer> counter = new HashMap<>();
        for (String word : words) {
            counter.put(word, counter.getOrDefault(word, 0) + 1);
        }
        
        // Sort by frequency (descending) then alphabetically
        List<Map.Entry<String, Integer>> sortedEntries = new ArrayList<>(counter.entrySet());
        sortedEntries.sort((a, b) -> {
            int freqCompare = b.getValue().compareTo(a.getValue());
            return freqCompare != 0 ? freqCompare : a.getKey().compareTo(b.getKey());
        });
        
        // Print results
        System.out.println("\nWord counts:");
        for (Map.Entry<String, Integer> entry : sortedEntries) {
            System.out.println(entry.getKey() + ": " + entry.getValue());
        }
        
        sc.close();
    }
}